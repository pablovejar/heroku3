<div class="col-md-6 col-md-offset-3">

	<div class="edit-order-form">

		<h1>Edit Order</h1>

		<%= simple_form_for([@restaurant, @order]) do |form| %>
            <div class="field">
            <%= form.label :price %>
            <%= form.text_field :price %>
          </div>
        
          <div class="field">
            <%= form.label :payment %>
            <%= form.text_field :payment %>
          </div>
        
          <div class="field">
            <%= form.label :delivery_address %>
            <%= form.text_field :delivery_address %>
          </div>
        
          <div class="field">
            <%= form.label :delivery_time %>
            <%= form.time_select :delivery_time %>
          </div>
        
          <div class="field">
            <%= form.label :status %>
            <%= form.text_field :status %>
          </div>
        
          <div class="field">
            <%= form.label :notes %>
            <%= form.text_area :notes %>
          </div>
        
          <div class="actions">
            <%= form.submit %>
          </div>
		<% end %>	
	</div>
</div>
<%= link_to 'Back', root_path %>
