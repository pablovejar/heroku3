<div class="col-md-6 col-md-offset-3">

	<div class="edit-comment-form">

		<h1>Edit Comment</h1>

		<%= simple_form_for([@restaurant, @comment]) do |form| %>
			<div class="field">
            <%= form.label :body %>
            <%= form.text_area :body %>
            </div>

            <div class="field">
                <%= form.label :date %>
                <%= form.date_select :date %>
            </div>

            <div class="actions">
                <%= form.submit %>
            </div>
		<% end %>	

	</div>

</div>

<%= link_to 'Back', root_path %>